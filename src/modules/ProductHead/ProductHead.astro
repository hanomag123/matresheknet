---
import { Sprite } from "astro-icon";
import DefaultBtn from "../../components/DefaultBtn/DefaultBtn.astro";
const products = [
  { img: "./img/prod/prod-2.png" },
  { img: "./img/prod/prod-2.png" },
  { img: "./img/prod/prod-2.png" },
  { img: "./img/prod/prod-2.png" },
  { img: "./img/prod/prod-3.png" },
  { img: "./img/prod/prod-3.png" },
  { img: "./img/prod/prod-3.png" },
  { img: "./img/prod/prod-3.png" },
  { img: "./img/prod/prod-1.png" },
  { img: "./img/prod/prod-1.png" },
  { img: "./img/prod/prod-1.png" },
  { img: "./img/prod/prod-1.png" },
];
---

<div class="product-head">
  <div class="container product-head__container">
    <div class="product-head-slider">
      <div class="product-head-slider__wrapper">
        <button
          type="button"
          class="swiper-btns__btn swiper-btns__btn_prev product-head-btn"
        >
          <Sprite name="fi_chevron-right" />
        </button>
        <button
          type="button"
          class="swiper-btns__btn swiper-btns__btn_next product-head-btn"
        >
          <Sprite name="fi_chevron-right" />
        </button>
        <div class="swiper product-head-slider__pagination">
          <div class="swiper-wrapper">
            {
              products.map((slide) => (
                <div class="swiper-slide" data-file={slide.img}>
                  <img
                    src={slide.img}
                    alt=""
                    loading="lazy"
                    data-file={slide.img}
                  />
                  <div class="swiper-preloader">
                    <div class="swiper-lazy-preloader swiper-lazy-preloader-white" />
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
      <div class="swiper product-head-slider__main">
        <div class="swiper-wrapper">
          {
            products.map((slide) => (
              <div class="swiper-slide">
                <img src={slide.img} alt="" loading="lazy" />
                <div class="swiper-preloader">
                  <div class="swiper-lazy-preloader swiper-lazy-preloader-white" />
                </div>
              </div>
            ))
          }
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>

    <!-- <div class="product-head__content"> -->
    <h1 class="product-head__title">Набор походный Сплав Track</h1>

    <div class="product-head-top">
      <div class="product-head-top__inner">
        <span class="product-head__text">
          Артикул:
          <span class="product-head__text_black">1234211</span>
        </span>

        <div class="product-head-rate">
          <div class="rate product-head-rate__stars">
            <Sprite name="star" class="active" />
            <Sprite name="star" class="active" />
            <Sprite name="star" class="active" />
            <Sprite name="star" />
            <Sprite name="star" />
          </div>
          <span class="product-head__text product-head__text_black"
            >1 отзыв</span
          >
        </div>

        <button type="button" class="product-head__share">
          <Sprite name="fi_share" />
           Поделиться
        </button>
      </div>
    </div>

    <div class="product-head-main">
      <div class="product-head-main-price">
        <span class="product-head-main-price__current">265 000 ₽</span>
        <span class="product-head-main-price__discount">-50%</span>
        <span class="product-head-main-price__last">265 000 ₽</span>
      </div>

      <div class="product-head-main__btns">
        <DefaultBtn size="sm">В корзину</DefaultBtn>
        <DefaultBtn
          size="sm"
          color="light"
          className="product-head-main__fav-btn"
        >
          <Sprite name="fi_heart" />
           Добавить в избранное
        </DefaultBtn>
      </div>
      <ul class="product-head-main-info">
        <li class="product-head-main-info__item has">В наличии - 14</li>
        <li class="product-head-main-info__item nohas">Нет на складе</li>
        <li class="product-head-main-info__item await">Под заказ</li>
      </ul>

      <!-- {
        products.map((el) => (
          <label class="product-wa__color-ithem">
            <input
              type="radio"
              data-file={el.img}
              value={el.img}
              name="category"
            />
            {el.img}
          </label>
        ))
      } -->
    </div>

    <div class="product-head-spec">
      <table class="product-head-spec__table">
        <tbody>
          <tr>
            <td class="product-head__text">Тип</td>
            <td class="product-head__text product-head__text_black">набор</td>
          </tr>
